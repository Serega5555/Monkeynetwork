@model Monkeynetwork.ViewModels.Account.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.10/jquery.validate.unobtrusive.min.js"></script>

<div class="block-reg background-white block2">
    <h4 class="center">Продолжение регистрации</h4>
    <form class="frm position-relative" method="post" asp-controller="Register" asp-action="Register">
        <div asp-validation-summary="ModelOnly"></div>
        <div > 
            <div class="mrgn">
                <input asp-for="FirstName" class="form-control" placeholder="Введите ваше Имя" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
        </div>
        <div>
            <div class="mrgn">
                <input asp-for="MiddleName" class="form-control" placeholder="Введите ваше Отчество" />
                <span asp-validation-for="MiddleName" class="text-danger"></span>
            </div>
        </div>
        <div>
            <div class="mrgn">
                <input asp-for="LastName" class="form-control" placeholder="Введите вашу Фамилию" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
        </div>
        <div class="text-color-gray text-size_12 center">Дата рождения</div>
        <div>
            <div class="mrgn">
                <input asp-for="Year" class="form-control date_control" />
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>
            <div class="mrgn">
                <input asp-for="Month" class="form-control date_control" />
                <span asp-validation-for="Month" class="text-danger"></span>
            </div>
            <div class ="mrgn">
                <input asp-for="Date" class="form-control date_control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
        </div>
        <div class="text-color-gray text-size_12 center">Данные для входа</div>
        <div>
            <div class="mrgn">
                <input asp-for="EmailReg" class="form-control" placeholder="Введите Email" />
                <span asp-validation-for="EmailReg" class="text-danger"></span>
            </div>
        </div>
        <div>
            <div class="mrgn">
                <input asp-for="PasswordReg" class="form-control" placeholder="Введите пароль" />
                <span asp-validation-for="PasswordReg" class="text-danger"></span>
            </div>
        </div>
        <div>
            <div class="mrgn">
                <input asp-for="PasswordConfirm" class="form-control" placeholder="Подтвердите пароль" />
                <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
            </div>
        </div>
        <div class="center">
            <input class="btn_submit" type="submit" value="Создать" />
        </div>
    </form>
    </script>
</div>
