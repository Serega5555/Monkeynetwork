@model Monkeynetwork.ViewModels.Account.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.10/jquery.validate.unobtrusive.min.js"></script>

<div class="block-reg background-white center block">
    <h4 class="center">Впервые с нами?</h4>
    <div class="center text-color-gray">Создание аккаунта</div>
    <form class="frm" method="get" asp-controller="Register" asp-action="RegisterPart2">
        <div asp-validation-summary="ModelOnly"></div>
        <div>
            <div class="mrgn">
                <input asp-for="FirstName" class="form-control" placeholder="Введите ваше Имя" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
        </div>
        <div>
            <div class="mrgn">
                <input asp-for="LastName" class="form-control" placeholder="Введите вашу Фамилию" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
        </div>

        <div class="text-color-gray text-size_12">Дата рождения</div>
        <div class="mrgn center">
            <select asp-for="Year" class="form-control date_control" ID="ddlYear"
                    asp-items="Enumerable.Range(DateTime.Now.AddYears(-100).Year, DateTime.Now.AddYears(-14).Year - DateTime.Now.AddYears(-100).Year).Reverse().Select(x=> new SelectListItem(x.ToString(), x.ToString()))"
                    onchange="PopulateDays()">
                <option value="" disabled selected>Год</option>
                <option value=""></option>
            </select>
            
            <span asp-validation-for="Year" class="text-danger"></span>
            <select asp-for="Month" class="form-control date_control" asp-items="Html.GetEnumSelectList<DoggyNetwork.ViewModels.Months>()" onchange="PopulateDays()" ID="ddlMonth">
                <option value="" disabled selected>Месяц</option>
                <option value=""></option>
            </select>
            <span asp-validation-for="Month" class="text-danger"></span>
            
            <select asp-for="Date" class="form-control date_control" ID="ddlDay">
                <option value="" disabled selected>День</option>
                <option value=""></option>
            </select>
            <span asp-validation-for="Date" class="text-danger"></span>

        </div>

        <div class="center">
            <input class="btn_submit" type="submit" value="Продолжить" />
        </div>
    </form>

    <script src="http://code.jquery.com/jquery-latest.js"></script>

    <script type="text/javascript">
        function PopulateDays() {
            var daysInMonth;
            var month = document.getElementById("ddlMonth").value;
            var year = document.getElementById("ddlYear").value;
            var daySelect = document.getElementById("ddlDay");

            if (month && year) {
                // Получить количество дней в месяце (учитываем ноль для индексации месяца)
                daysInMonth = new Date(year, month, 0).getDate();

                // Добавить дни в выпадающий список
                for (var day = 1; day <= daysInMonth; day++) {
                    var option = document.createElement("option");
                    option.value = day;
                    option.text = day;
                    daySelect.add(option);
                }
            }
        }
    </script>

</div>
