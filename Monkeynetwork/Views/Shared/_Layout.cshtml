@using Microsoft.AspNetCore.Identity;
@using Monkeynetwork.Models.Users;
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Любители песиков | Добро пожаловать</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/main-page.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Monkeynetwork.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />

</head>
<body>
    <header class="header">
        <nav >
            <div>
                @if (!SignInManager.IsSignedIn(User))
                {
                    <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                        <img src="~/log.jpg" alt="Monkeynetwork" style="height: 40px;">
                    </a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                }
                else
                {
                    <a class="navbar-brand" asp-controller="AccountManager" asp-action="MyPage">
                        <img src="~/log.jpg" alt="Monkeynetwork" style="height: 40px;">
                    </a>
                    <partial name="_SearchLayoutPartial" />
                    <partial class="left-side" name="_LoginPartial.cshtml" />
                }
                   
            </div>
        </nav>
    </header>
    <div class="imaged">
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>
    

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Monkeynetwork - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
